<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VinylsG12" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EditTextStyle" parent="Theme.VinylsG12">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
        <item name="android:fontFamily">@font/averia_libre_regular</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Theme.ButtonStyle" parent="Theme.VinylsG12">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>